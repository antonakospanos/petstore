<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
		 monitoring="autodetect" dynamicConfig="true" name="petstore-cache">

	<diskStore path="java.io.tmpdir/petstore-cache"/>

	<defaultCache maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToIdleSeconds="3600" timeToLiveSeconds="3600">
		<cacheEventListenerFactory class="com.eurodyn.hr.petstore.support.ehcache.LoggingCacheListenerFactory"/>
	</defaultCache>

	<!-- DB Entities -->
	<cache name="org.hibernate.cache.internal.StandardQueryCache" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToIdleSeconds="3600" timeToLiveSeconds="3600">
		<cacheEventListenerFactory class="com.eurodyn.hr.petstore.support.ehcache.LoggingCacheListenerFactory"/>
	</cache>

	<cache name="petstore.entity-cache" maxElementsInMemory="10000" eternal="false" overflowToDisk="false" timeToIdleSeconds="3600" timeToLiveSeconds="3600">
		<cacheEventListenerFactory class="com.eurodyn.hr.petstore.support.ehcache.LoggingCacheListenerFactory"/>
	</cache>
</ehcache>
